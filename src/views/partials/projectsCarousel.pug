-
    var images = [
        {
            src: './images/project1.jpg',
            alt: 'First project'
        },
        {
            src: './images/project2.jpg',
            alt: 'Second project'
        },
        {
            src: './images/project3.jpg',
            alt: 'Third project'
        }
    ]

mixin projectsCarousel()
    #projectsCarousel.carousel.slides
        ol.carousel-indicators
            each val, index in images
                if index == 0
                    li.active(data-target="#projectsCarousel", data-slide-to=index)
                else
                    li(data-target="#projectsCarousel", data-slide-to=index)
        .carousel-inner
            each val, index in images
                .carousel-item(class=index==0 ? 'active' : '')
                    img.d-block(src=images[index].src, alt=images[index].alt)
                    .carousel-caption
                        h3= images[index].alt
                        .links
                            a(href="#") Project Details <i class="icon-right"></i>
                            a(href="#") View Slides <i class="icon-right"></i>